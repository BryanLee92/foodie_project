<!DOCTYPE html>
<html lang="en">
<head>
    <%-include("../../partials/head.ejs")%>
</head>
<body>
    <header>
        <%-include("../../partials/header.ejs")%>
    </header>
    <main class="main">
        <% if(userdata){%>
        <form action="/sessions/<%=id.id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="username">ID Username:</label>
                <input type="text" name="username" id="username" value="<%=id.username%>"><br /><br />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" required><br /><br />
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" value="<%=id.email%>"><br /><br />
            </div>
            <div class="form-group">
                <label for="number">Phone Number:</label>
                <input type="text" name="number" id="number" value="<%=id.number%>"><br /><br />
            </div>
            <div class="registerSubmit">
                <input class="submitsize" type="submit" value="Submit"><br /><br />
            </div>
        </form>
        <%} else {%>
            <main class="main">
                <form action="/sessions" method="POST">
                    <div class="form-group">
                        <label for="username">ID Username:</label>
                        <input type="text" name="username" id="username" required><br /><br />
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" name="password" id="password" required><br /><br />
                    </div>
                    <div class="registerSubmit">
                        <input class="submitsize" type="submit" value="Submit"><br /><br />
                    </div>
                </form>
            </main>
    </main>
    <%}%>
    <footer>
        <%-include("../../partials/footer.ejs")%>
    </footer>
</body>
</html>
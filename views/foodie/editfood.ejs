<!DOCTYPE html>
<html lang="en">
<head>
    <%-include("../../partials/head.ejs")%>
</head>
<body>
    <header>
        <%-include("../../partials/header.ejs", {userdata})%>
    </header>
    <main class="main">
        <%if(userdata){%>
            <form action="/foodie/<%=data._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="category">Category:</label>
                    <input type="text" name="category" id="category" value="<%=data.category%>" required><br /><br />
                </div>
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" name="name" id="name" value="<%=data.name%>" required><br /><br />
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <input type="text" name="description" id="description"  value="<%=data.description%>" required><br /><br />
                </div>
                <div class="form-group">
                    <label for="img">Image:</label>
                    <input type="text" name="img" id="img" value="<%=data.img%>" required><br /><br />
                </div>
                <div class="form-group">
                    <label for="price">price:</label>
                    <input type="number" name="price" id="price" min="10" value="<%=data.price%>" required><br /><br />
                </div>
                <div class="registerSubmit">
                    <input class="submitsize" type="submit" value="Submit"><br /><br />
                </div>
            </form>
        <%}else{%>
            <form action="/sessions" method="POST">
                <div class="form-group">
                    <label for="username">ID Username:</label>
                    <input type="text" name="username" id="username" required><br /><br />
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" name="password" id="password" required><br /><br />
                </div>
                <div class="registerSubmit">
                    <input class="submitsize" type="submit" value="Submit"><br /><br />
                </div>
            </form>
        <%}%>
    </main>
    <footer>
        <%-include("../../partials/footer.ejs")%>
    </footer>
</body>
</html>